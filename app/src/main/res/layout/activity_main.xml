<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alfianyulianto.flipviewexample.MainActivity">

    <com.alfianyulianto.flippoview.FlippoView
        android:id="@+id/flippo_view"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        app:flipDuration="1000"
        app:closeReverse="true"
        app:flipFrom="@string/right_side">

        <include
            android:id="@+id/back_card"
            layout="@layout/back_card"/>

        <include
            android:id="@+id/front_card"
            layout="@layout/front_card"/>

    </com.alfianyulianto.flippoview.FlippoView>
</RelativeLayout>